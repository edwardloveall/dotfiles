  name = Edward Loveall
  email = edward@edwardloveall.com

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = cyan

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
  remote = origin
  merge = refs/heads/master

# Use template dir for git repos
[init]
  templatedir = ~/.git_template

# Use a global ignore file
[core]
  excludesfile = /Users/edwardloveall/.gitignore_global
[credential]
  helper = osxkeychain
