[push]
  default = tracking

[format]
  pretty = %Cblue%h%Creset %Cgreen[%ar]%Creset (%an) %s

[user]
  name = Edward Loveall
  email = edward@edwardloveall.com
	signingkey = 789A4AE983AC8901

[alias]
  create-branch = checkout -b
  delete-branch = !sh -c 'git push origin :$1 && git branch -D $1' -
  branch-log = log master..HEAD
  stage = add
  unstage = reset
  store = commit

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = cyan

# Use `origin` as the default remote on the `master` branch in all cases
[branch "master"]
  remote = origin
  merge = refs/heads/master

# Use a global ignore file
[core]
  editor = edit --wait --new-window
	excludesfile = /Users/edwardloveall/.gitignore_global

[credential]
  helper = osxkeychain

[merge]
  ff = only

[commit]
  template = ~/.gitmessage
	gpgsign = true

[fetch]
  prune = true

[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f

[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[remote "origin"]
	push = HEAD
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Users/edwardloveall/Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
